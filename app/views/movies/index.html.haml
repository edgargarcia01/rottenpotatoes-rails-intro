-#  This file is app/views/movies/index.html.haml
%h2 All Movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", true,(true if @filtered_by_ratings[rating]), :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :class => 'btn btn-primary', :id => "ratings_submit"
%table#movies
  %thead
    %tr
      %th{class:('hilite' if @sorted=='title')}=link_to "Movie Title",movies_path(sorted:"title"),id:"title_header"
      %th Rating
      %th{class:('hilite' if @sorted=='release_date')}=link_to "Release Date",movies_path(sorted:"release_date"),id:"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
